# Node.js API server
FROM node:22-alpine

# Установим зависимости для better-sqlite3
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Копируем файлы
COPY server/ ./

# Устанавливаем только production зависимости
RUN npm ci --omit=dev

# Создаём директории для БД и assets
RUN mkdir -p /app/database /app/assets/images
COPY database/ /app/database/

EXPOSE 3001

# Run start server
CMD ["sh", "-c", "npm run server"]
